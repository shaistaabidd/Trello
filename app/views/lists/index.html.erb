<h1>All Lists</h1>
<table>
  <thead>
    <tr>
      <th>List Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <td><%= link_to 'Show', board_list_path(list.board_id, list) %></td>
        <td><%= link_to 'Edit', edit_board_list_path(list.board_id, list) %></td>
        <td><%= link_to 'Destroy', board_list_path(list.board_id, list), method: :delete %></td>
        <td><%= link_to 'Create Card',  new_board_list_card_path(list.board_id,list) %></td>
      </tr>  
    <% end %>
  </tbody>
</table>

<br>

