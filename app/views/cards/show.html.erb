<h1>Show Card</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Card Name</th>
      <th scope="col">Card Status</th>
      <th scope="col">Created At</th>
      <th scope="col">Updated At</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td><%= @card.name %></td>
      <td><%= @card.status %></td>
      <td><%= @card.created_at %></td>
      <td><%= @card.updated_at %></td>
    </tr>
  </tbody>
  <%= link_to 'Back', board_list_cards_path %>
</table>