<h1>All Cards</h1>
<table>
  <thead>
    <tr>
      <th>Card Name</th>
      <th colspan = "3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.name %></td>
        <td><%= card.status %></td>
        <td><%= link_to 'Show', board_list_card_path(card.list.board, card.list,card) %></td>
      </tr>  
    <% end %>
  </tbody>
</table>

<br>

