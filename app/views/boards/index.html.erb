<h1>Board List</h1>

<table>
  <thead>
    <tr>
      <th>Board Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <%if board.user==current_user%>
        <tr>
          <td><%= board.name %></td>
          <td><%= link_to 'Show', board %></td>
          <td><%= link_to 'Edit', edit_board_path(board) %></td>        
          <td><%= link_to 'Destroy', delete_board_path(board) %></td>  
          <td><%= link_to 'Create List',  new_board_list_path(board) %></td>      
        </tr>
      <% end %>  
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Board', new_board_path %>
